<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleMgrWidgt.ScheduleDayFragment">

    <com.example.habitassistant.ScheduleMgrWidgt.library.WeekView.CalendarView
        android:id="@+id/schedule_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:viewType="Day"
        app:headerTextSize="30sp"
        app:timeTextSize="12sp"
        app:timeTextColor="#FF7C7C7C"
        app:eventTextSize="10sp"
        app:firstDayOfWeek="monday"
        app:headerTodayTextColor="#FF4081"
        />
</androidx.constraintlayout.widget.ConstraintLayout>